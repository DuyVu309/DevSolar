<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="viewModel"
            type="com.example.duyvd1.activities.main.MainViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel::onCloseSearch}"
                android:padding="@dimen/common_20dp"
                android:src="@drawable/ic_arrow_back_black_24dp"
                android:visibility="@{viewModel.mIsSearch ? View.VISIBLE : View.GONE}" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/common_20dp"
                android:layout_weight="1"
                android:text="@string/loc_tin_tuc"
                android:textSize="@dimen/text_size_20sp"
                android:textStyle="bold"
                android:visibility="@{viewModel.mIsSearch ? View.GONE : View.VISIBLE}" />

            <EditText
                android:id="@+id/edt_search"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:hint="@string/Search"
                android:visibility="@{viewModel.mIsSearch ? View.VISIBLE : View.GONE}" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:background="?android:attr/selectableItemBackground"
                android:onClick="@{viewModel::onOpenSearch}"
                android:padding="@dimen/common_20dp"
                android:src="@drawable/ic_search_black_24dp"
                android:visibility="@{viewModel.mIsSearch  ? View.GONE : View.VISIBLE}" />
        </LinearLayout>

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/t_layout_fragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:tabGravity="fill"
            app:tabIndicatorColor="@color/transparent"
            app:tabSelectedTextColor="@color/red"
            app:tabTextColor="@color/blue" />

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/v_pager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>
</layout>