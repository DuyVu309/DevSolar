<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
            name="viewModel"
            type="com.example.duyvd1.activities.main.fragment.ItemArticlesViewModel" />
    </data>

    <LinearLayout
        android:id="@+id/ll_item_articles"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_margin="05dp"
        android:onClick="@{viewModel::onItemClick}"
        android:onLongClick="@{viewModel::onItemLongClick}"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imv_articles"
            android:layout_width="70dp"
            android:layout_height="70dp"
            tools:imageUrl="@{viewModel.uriImage}"
            android:layout_margin="5dp"
            android:scaleType="centerCrop"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:text="@{viewModel.title}"
                android:textColor="@color/color_blue_title"
                android:textSize="20sp"
                android:textStyle="bold"
                tools:text="AAAAAA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="@{viewModel.desc}"
                android:maxLines="1"
                android:layout_marginTop="5dp"
                android:textColor="@color/color_grey"
                android:textSize="12sp"
                tools:ignore="NestedWeights"
                tools:text="AAAAAA AAAA AAAA AAAA AAA AAAA AAAA AAA AA" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="@{viewModel.date}"
                android:maxLines="1"
                android:textColor="@color/color_grey"
                android:textSize="12sp"
                tools:ignore="NestedWeights"
                tools:text="AAAAAA AAAA AAAA AAAA AAA AAAA AAAA AAA AA" />
        </LinearLayout>
    </LinearLayout>
</layout>
